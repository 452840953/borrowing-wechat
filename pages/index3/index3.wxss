.feature{
  width: 100%;
  padding: 10rpx;
} 

.feature-item{
  border: #aaaaaa 1px solid;
  border-radius: 5px;
  display: inline-block;
  width: 500rpx;
  margin: 15rpx;
  vertical-align:top;
}
.feature .item-content{
  padding: 20rpx;
  background: white;
}
.feature-item image{
  width:100%;
  height:300rpx;
}
.feature-item .info{
  font-size: 30rpx;
  white-space:normal !important;
  word-wrap: break-word;
  display:-webkit-box;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}

.item-head{
  font-size: 40rpx;
  padding:10rpx 20rpx;
  display: block;
  border-bottom: #aaaaaa 1px solid;
  background: #5a5a5a;
  color: white;
}


.new-button{
  position: fixed;
  bottom: 2%;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border: black 80rpx none; 
}
.image-group {
  display: flex;
  white-space: nowrap;
  margin-top: 30rpx;
  margin-left: 30rpx;
}
.image-group image {
  display: inline-block;
  width: 375rpx;
  height: 180rpx;
  margin-right: 20rpx;
}